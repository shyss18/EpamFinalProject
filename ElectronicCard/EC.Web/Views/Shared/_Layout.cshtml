<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-md navbar-light navBack fixed-top">
        <a class="navbar-brand" href="#">Электронная карта</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto ">
                <li class="nav-item">
                    <a class="nav-link" href="#">Записи</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Поиск</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#" data-toggle="modal" data-target="#aboutModal">О сайте</a>
                </li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
                <li class="nav-item">
                    @Html.ActionLink("Войти", "SignIn", "Auth", null, new { @class = "btn btn-outline-primary mr-sm-2" })
                </li>
                <li class="nav-item">
                    <a class="btn btn-outline-success my-2 my-sm-0" href="#" data-toggle="modal" data-target="#checkDoctor">Регистрация</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container-fluid wrapper body-content">
        @{ Html.RenderPartial("AboutPartial");}
        @{ Html.RenderPartial("CheckForDoctor");}
        <div class="content">
            @RenderBody()
        </div>
    </div>

    <footer id="footer" class="py-3">
        <div class="text-center text-white">
            <p class="h6">&copy @DateTime.Now.Year<a class="text-white ml-2" href="#">Электронная карта</a></p>
        </div>
    </footer>

    <script src="~/Scripts/jquery-3.0.0.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>