@model EC.Web.Models.EditPasswordModel

@{
    ViewBag.Title = "Редактирование пароля";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container" align="center">
    <div class="col-md-5">
        <h4 class="text-center text-warning" style="padding-top: 10%">Редактирование пароля</h4>
        @using (Html.BeginForm("EditPassword", "Auth", FormMethod.Post, new { @class = "form-group", novalidate = true }))
        {
            <div class="form-group row">
                @Html.DisplayNameFor(model => model.OldPassword):
                @Html.EditorFor(model => model.OldPassword, new
                {
                    @class = "form-control"
                })
            </div>
            <div class="form-group row">
                @Html.TextBoxFor(model => model.NewPassword, new
                {
                    @class = "form-control",
                    @type="password",
                    @placeholder = Html.DisplayNameFor(model => model.NewPassword),
                })
            </div>
            <div>
                @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
            </div>
            <br />
            <div class="form-group row">
                @Html.TextBoxFor(model => model.ComparePassword, new
                {
                    @class = "form-control",
                    @type="password",
                    @placeholder = Html.DisplayNameFor(model => model.ComparePassword),
                })
            </div>
            <div>
                @Html.ValidationMessageFor(model => model.ComparePassword, "", new { @class = "text-danger" })
            </div>
            <br />

            <div class="container">
                <input type="submit" class="btn btn-outline-warning" value="Изменить" />
                @Html.ActionLink("Отмена", "Index", "Home", null, new { @class = "btn btn-outline-secondary" })
            </div>
        }
    </div>
</div>


