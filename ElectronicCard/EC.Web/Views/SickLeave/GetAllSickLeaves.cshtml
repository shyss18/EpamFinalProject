@model IEnumerable<EC.Entities.Entities.SickLeave>
@{
    ViewBag.Title = "Больничные листы";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4 class="text-center text-info">Больничные листы</h4>
    <div class="row justify-content-center text-center">
        @foreach (var sickLeave in Model)
        {
            <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem; margin-bottom: 20px; margin-right: 20px;">
                <div class="card-body">
                    <h5 class="card-title">Номер: @sickLeave.Number</h5>
                    @Html.ActionLink("Подробнее", "SickLeaveDetails", "SickLeave", new { id = sickLeave.Id }, new { @class = "card-link" })
                </div>
            </div>
        }
    </div>
</div>

