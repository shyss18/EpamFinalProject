@model EC.Entities.Entities.Procedure

@{
    ViewBag.Title = "Подробнее о процедуре " + Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4 class="text-info text-center">Информация о процедуре</h4>
    <div class="justify-content-center">
        <div class="form-group row">
            @Html.LabelFor(m => m.Title, "Название процедуры:", new { @class = "col-sm-3 col-form-label h3" })
            <div class="col-sm-3 col-form-label">
                @Html.DisplayTextFor(m => m.Title)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Description, "Описание процедуры:", new { @class = "col-sm-3 col-form-label h3" })
            <div class="col-sm-6 col-form-label">
                @Html.DisplayTextFor(m => m.Description)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.TimeUse, "Длительность прохождения процедуры:", new { @class = "col-sm-4 col-form-label h3" })
            <div class="col-sm-3 col-form-label">
                @Html.DisplayTextFor(m => m.TimeUse), дней/дня
            </div>
        </div>
    </div>
    <div>
        @Html.ActionLink("Изменить", "UpdateProcedure", new { id = Model.Id }, new { @class = "btn btn-outline-warning" })
        <a class="btn btn-outline-danger my-2 my-sm-0" href="#" data-toggle="modal" data-target="#deleteProcedure">Удалить</a>
        @Html.ActionLink("Все процедуры", "GetAllProcedures", null, new { @class = "btn btn-outline-secondary" })
    </div>
</div>
@{Html.RenderPartial("DeleteProcedure");}
