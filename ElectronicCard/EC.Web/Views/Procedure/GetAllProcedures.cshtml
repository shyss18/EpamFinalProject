@model IEnumerable<EC.Entities.Entities.Procedure>

@{
    ViewBag.Title = "Все процедуры";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <h4 class="text-center text-info">Процедуры</h4>
    <div class="row justify-content-center text-center">
        @foreach (var procedure in Model)
        {
            <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem; margin-bottom: 20px; margin-right: 20px;">
                <div class="card-body">
                    <h5 class="card-title">@procedure.Title</h5>
                    @Html.ActionLink("Подробнее", "ProcedureDetails", "Procedure", new { id = procedure.Id }, new { @class = "card-link" })
                </div>
            </div>
        }
    </div>
</div>
