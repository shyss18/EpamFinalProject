@model EC.Entities.Entities.Photo

<div class="modal fade" id="deletePhoto" role="dialog" aria-labelledby="title">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header text-center">
                <h4 class="modal-title text-info" id="title">Удаление фото</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("DeletePhoto", "Photo", new { id = Model.Id }, FormMethod.Post, new { @class = "form-group" }))
                {
                    <div>
                        Вы действительно хотите удалить фото?
                    </div>

                    <div class="modal-footer">
                        <button type="submit" class="btn btn-danger">Удалить</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Закрыть</button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
